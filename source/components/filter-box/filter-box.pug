mixin btn-radio-item(group, name, id)
    label
        input(type='radio' name=group value=id)
        span= name

mixin btn-checkbox-item(name)
    label(class='checkbox-group__item')
        input(type='checkbox')
        span= name

div(class='main-filter-wrapper')
    div(class='main-filter')
        form(class='main-filter__form')
            div(class='main-filter__inputs')
                div(class='main-filter__location location-input')
                    input(type='text')
                    div(class='location-input__dynamic-label') Город, район, метро, название ЖК
                    div(class='location-input__bottom-line')
                    div(class='location-input__tips')
                div(class='main-filter__price price-input')
                    input(type='text')
                    div(class='price-input__dynamic-label') Стоимость, руб.
                    div(class='price-input__bottom-line')
                div(class='main-filter__price-small price-input-small')
                    input(type='text')
                    div(class='price-input-small__dynamic-label_lifted') Стоимость, руб.
                    div(class='price-input-small__dynamic-label') От
                    input(type='text')
                    div(class='price-input-small__dynamic-label') До
                div(class='main-filter__deadline deadline-input')
                    div(class='deadline-input__dynamic-label') Срок сдачи
                    div(class='deadline-input__bottom-line')
            div(class='main-filter__additional additional-controls')
                div(class='additional-controls__row btn-group')
                    div(class='btn-group__title') Расположение
                    div(class='btn-group__item-location')
                        each name, index in ['Все', 'Москва', 'Новая Москва', 'Подмосковье']
                            +btn-radio-item('location', name, index)
                    div(class='btn-group__item-location checkbox-group')
                        each name in ['Округ', 'Район', 'Метро', 'Шоссе', 'Шоссе', 'Город МО', 'Район МО']
                            +btn-checkbox-item(name)
            div(class='main-filter__controls controls-group')
                a(class='controls-group__additional additional-params')
                    span(class='additional-params__arrow')
                        svg(width='7' height='12' viewBox='0 0 7 12' fill='none' xmlns='http://www.w3.org/2000/svg')
                            path(d='M5.89595 10.8977C6.03468 10.7599 6.03468 10.5359 5.89595 10.3981L1.46513 6.00483L5.89595 1.60299C6.03468 1.46517 6.03468 1.2412 5.89595 1.10337C5.75722 0.965543 5.53177 0.965543 5.39304 1.10337L0.719435 5.74641C0.650068 5.81532 0.615385 5.90146 0.615385 5.99622C0.615385 6.08236 0.650068 6.17712 0.719435 6.24603L5.39304 10.8891C5.53177 11.0355 5.75722 11.0355 5.89595 10.8977Z' fill='#' stroke='#fff')
                    span(class='additional-params__text') Дополнительные параметры
                    //- span(class='additional-params__counter') 8
                a(class='controls-group__search-on-map') Новостройки на карте
                button(class='controls-group__search-button-small') Найти
                