@import '../../assets/styles/variables.styl';
@import '../../assets/styles/mixins.styl';

/* Classes */
.main-filter-wrapper
  margin-bottom 16px
  position relative

.main-filter
  cursor pointer
  position absolute
  top 100px
  width calc(100% - 80px)
  margin-bottom 14px
  padding 21px
  font-size 16px
  z-index 50
  background-color $_blue-3
  color #fff

  @media only screen and (max-width: $screen-lg)
    position static
    padding 26px 40px

  @media only screen and (max-width: $screen-sm)
    position static
    padding 26px
    width calc(100% - 52px)

  @media only screen and (max-width: $screen-xs)
    position static
    padding 20px 12px
    width calc(100% - 28px)

  &__form
    flex()
    position relative
    -webkit-box-orient vertical
    -webkit-box-direction normal
    -ms-flex-direction column
    flex-direction column

  &__inputs
    flex()
    position relative
    margin-bottom 21px

    @media only screen and (max-width: $screen-lg)
      margin-bottom 16px
    @media only screen and (max-width: $screen-xs)
      flex-wrap wrap

  &__controls
    flex()
    -webkit-box-pack justify
    -ms-flex-pack justify
    justify-content space-between

  &__additional
    height 0px
    width 100%
    display block
    overflow hidden
    &_expanded
      height 100%

.location-input
  position: relative
  height: 64px
  width: 764px
  display: -webkit-box
  display: -ms-flexbox
  display: flex
  -webkit-box-align: end
  -ms-flex-align: end
  align-items: flex-end
  
  @media only screen and (max-width: $screen-md)
    width 476px
  @media only screen and (max-width: $screen-sm)
    width 307px
  @media only screen and (max-width: $screen-xs)
    width 100%
    margin-bottom 12px

  input
    height 100%
    padding 11px 20px 0
    border-radius(0)
    border-top-left-radius 2px
    -webkit-box-sizing border-box
    box-sizing border-box

  &__dynamic-label
    position absolute
    top 50%
    left 20px
    color $_gray
    font-size 13px
    text-transform uppercase
    pointer-events none
    transition(.2s ease all)
    -webkit-transform translateY(-50%)
    transform translateY(-50%)
    &_lifted
      get-label-lifted-styles()

  &__bottom-line
    get-bottom-line-styles()
    &_expanded
      width 100%

  &__tips
    display none
    position absolute
    top 64px
    left 0
    max-height 260px
    padding-bottom 13px
    overflow auto
    background-color #fff
    border-top none
    border-bottom-right-radius 2px
    z-index 100
    transition(.2s ease all)
    visibility visible
    color #071321

  &__tips-category
    padding 20px 20px 7px
    font-size 10px
    color $_gray
    text-transform uppercase

  &__tips-item
    display block
    padding 7px 20px
    cursor pointer
    &:hover
      background-color #fff5cc
      text-decoration underline

.price-input
  flex()
  position relative
  width 321px
  height 64px
  border-left none
  background-color #fff
  cursor pointer
  
  @media only screen and (max-width: $screen-md)
    width 322px
  @media only screen and (max-width: $screen-sm)
    width 274px
  @media only screen and (max-width: $screen-xs)
    display none

  &__dynamic-label
    position absolute
    top 50%
    -webkit-transform translateY(-50%)
    transform translateY(-50%)
    left 20px
    border none
    color $_gray
    font-size 13px
    text-transform uppercase
    pointer-events none
    transition(.2s ease all)
    &_lifted
      get-label-lifted-styles()

  &__bottom-line
    get-bottom-line-styles()
    &_expanded
      width 100%

.price-input-small
  display none
  position relative
  width 100%
  height 64px
  border-left none
  background-color #fff
  cursor pointer
  margin-bottom 5px
  border-radius(2px)

  @media only screen and (max-width: $screen-xs)
    flex()

  input
    display none
    position relative
    display inline-block 
    width 50%
    border-right 1px solid #d4dbe3
    border-radius(2px)
    @media only screen and (max-width: $screen-xs)
      display block

  &__dynamic-label, &__dynamic-label_lifted
    display none
    position absolute
    top 70%
    -webkit-transform translateY(-50%)
    transform translateY(-50%)
    left 20px
    border none
    color $_gray
    font-size 12px
    text-transform uppercase
    pointer-events none
    &:last-child
      left 220px
    &_lifted
      get-label-lifted-styles()
    @media only screen and (max-width: $screen-xs)
      display block
  
.deadline-input
  position relative
  height 64px
  width 150px
  flex()
  -webkit-box-align end
  -ms-flex-align end
  align-items flex-end
  border-left none
  background-color #fff
  cursor pointer

  @media only screen and (max-width: $screen-md)
    width 148px
  @media only screen and (max-width: $screen-sm)
    width 137px
  @media only screen and (max-width: $screen-xs)
    width 50%

  &__dynamic-label
    position absolute
    top 50%
    left 20px
    color $_gray
    font-size 13px
    text-transform uppercase
    pointer-events none
    transition(.2s ease all)
    -webkit-transform translateY(-50%)
    transform translateY(-50%)
    width 75%
    &_lifted
      get-label-lifted-styles()

  &__bottom-line
    get-bottom-line-styles()
    &_expanded
      width 100%

.location-input input, .location-input__tips, .price-input input, .deadline-input input 
  width 100%
  border 1px solid #d4dbe3
  border-bottom-left-radius 2px

.controls-group
  &__additional
    height 52px
    width 250px
    flex()
    -webkit-box-align center
    -ms-flex-align center
    align-items center
    -webkit-box-pack center
    -ms-flex-pack center
    justify-content center
    color #fff
    margin-left auto

  &__search-on-map
    position relative
    width 192px
    height 52px
    flex()
    -webkit-box-align center
    -ms-flex-align center
    align-items center
    -webkit-box-pack center
    -ms-flex-pack center
    justify-content center
    font-size 16px
    font-weight 500
    color #fff
    background-color $_blue
    border-radius(2px)
    transition(border .35s ease, background-color .35s ease)
    margin-left: 60px
    
    &:hover
      color #fff
      border 0
      background-color $_blue-2

  &__search-button-small
    cursor pointer
    margin-left 20px
    padding 0 56px
    height 52px
    font-size 16px
    font-weight 500
    background-color $_golden
    border 0
    border-radius(2px)
    transition(background-color .35s ease)

    &:hover
      background-color $_golden-2

.additional-params
  &__arrow
    -webkit-transform none
    transform none 
    margin-left auto
    margin-right 21px
    -webkit-transform rotateZ(-90deg)
    transform rotateZ(-90deg)

    &_expanded
      -webkit-transform rotateZ(90deg)
      transform rotateZ(90deg)

  &__text
    width 221px
    font-size 16px
    color #fff
    line-height 20px
    border-bottom 0.5px dashed

  &__counter
    margin: 0 10px
    padding 0px 6px
    background-color $_golden
    color #071321
    border-radius(7px)

.additional-controls__row
  font-size 0
  margin-bottom 21px
  
  ul
    display: inline-block
    margin-right 21px

.btn-group__title
  color $_gray
  font-size 14px

.btn-group__item-location
  display inline-block
  padding-right 20px
  margin-top 15px

  @media only screen and (max-width: $screen-md)
    backface-visibility visible

  label
    position relative
    display inline-block
    padding 21px
    font-size 14px
    border 1px solid #14539e
    border-radius(1px)
    cursor pointer
    &:hover
      background-color $_blue
    
    input
      position absolute
      appearance()
      top 0
      left 0
      width 100%
      height 100%
      z-index 1
      cursor pointer
      &:checked
        background-color $_blue-2

    span
      position relative
      z-index 2

.checkbox-group
  &__item
    margin-right 5px

