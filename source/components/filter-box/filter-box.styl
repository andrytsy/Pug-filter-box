.main-filter-wrapper
  margin-bottom 16px
  position relative

.main-filter
  cursor pointer
  position absolute
  top 100px
  width 100%
  margin-bottom 16px
  padding 0 108px
  font-size 15px
  z-index 50
  
  @media only screen and (max-width: 1023px)
    cursor pointer

  @media only screen and (max-width: 1279px)
    position static
    margin-left -40px
    margin-right -40px
    padding 26px 40px
    width calc(100% + 80px)
    background-color #092e63

.main-filter__title
  color #fff
  margin-bottom 24px

  @media only screen and (max-width: 1279px)
    font-size 32px

.main-filter__form
  position relative
  display -webkit-box
  display -ms-flexbox
  display flex
  -webkit-box-orient vertical
  -webkit-box-direction normal
  -ms-flex-direction column
  flex-direction column

.main-filter__inputs
  position relative
  display -webkit-box
  display -ms-flexbox
  display flex
  margin-bottom 8px

  @media only screen and (max-width: 1279px)
    margin-bottom 16px

.location-input
  position: relative;
  height: 64px;
  width: 377px;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: end;
  -ms-flex-align: end;
  align-items: flex-end;

.location-input input
  height 100%
  padding 11px 20px 0
  border-radius 0
  border-top-left-radius 2px
  -webkit-box-sizing border-box
  box-sizing border-box

.location-input input, .location-input__tips
  width: 100%;
  border: 1px solid #d4dbe3;
  border-bottom-left-radius: 2px;

.location-input__dynamic-label
  position absolute
  top 50%
  left 20px
  color #94a5b9
  font-size 13px
  text-transform uppercase
  pointer-events none
  -webkit-transition .2s ease all
  transition .2s ease all
  -webkit-transform translateY(-50%)
  transform translateY(-50%)

.location-input__dynamic-label_lifted
  top 16px
  font-size 10px
  -webkit-transform none
  transform none

.location-input__bottom-line
  position absolute
  height 2px
  width 0
  left 0
  bottom 0
  background-color #ffcb00
  -webkit-transition .5s ease all
  transition .5s ease all

.location-input__tips
  display none
  position absolute
  top 64px
  left 0
  max-height 260px
  padding-bottom 13px
  overflow auto
  background-color #fff
  border-top none
  border-bottom-right-radius 2px
  z-index 100
  -webkit-transition .2s ease all
  transition .2s ease all
  visibility visible

.location-input__tips-category
  padding 20px 20px 7px
  font-size 10px
  color #94a5b9
  text-transform uppercase

.location-input__tips-item
  display block
  padding 7px 20px
  cursor pointer
  &:hover
    background-color #fff5cc